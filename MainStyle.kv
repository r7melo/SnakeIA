<Snake>:
    size_hint: (None, None)
    size: (10,10)
    pos: (-1000, -1000)
    canvas:
        Color:
            rgb: (0,.3,.8)
        Rectangle:
            size: self.size
            pos: self.pos

<HailSnake>:     
    size_hint: (None, None)
    size: (10,10)
    canvas:
        Color:
            rgb: (0,.8,0)
        Rectangle:
            size: self.size
            pos: self.pos

<Game>:
    size_hint: (None, None)
    size: (500,500)
    canvas:
        Color:
            rgba: (.8,.8,.8,.1)
        Rectangle:
            size: self.size
            pos: self.pos


FloatLayout:
    canvas:
        Color:
            rgb: (.2,.2,.2)
        Rectangle:
            pos: self.pos
            size: self.size

    Game:
        center: (root.width/2, root.height/2)

